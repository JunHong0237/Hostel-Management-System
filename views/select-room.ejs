                          <!DOCTYPE html>
                          <html lang="en">
                          <head>
                              <meta charset="UTF-8">
                              <meta name="viewport" content="width=device-width, initial-scale=1.0">
                              <title>Select Room</title>
                              <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
                          </head>
                          <body class="bg-light">
                              <div class="container mt-5">
                                  <h1 class="text-center mb-4">Select a Room</h1>
                                  <div>
                                      <% if (rooms.length > 0) { %>
                                          <% rooms.forEach(room => { %>
                                              <div class="card mb-4 shadow-sm">
                                                  <div class="card-body">
                                                      <h5 class="card-title">Room Number: <%= room.room_no %></h5>
                                                      <p class="card-text">Capacity: <%= room.room_capacity %></p>
                                                      <p class="card-text">Occupancy: <%= room.room_occupancy %></p>
                                                      <p class="card-text">Available Beds: <%= room.bedAvail %></p>
                                                      <a href="/view-room-details/<%= room.room_id %>?std_id=<%= studentId %>" class="btn btn-primary">View Details</a>
                                                  </div>
                                              </div>
                                          <% }) %>
                                      <% } else { %>
                                          <p class="text-center">No rooms available.</p>
                                      <% } %>
                                  </div>
                              </div>

                              <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                              <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
                              <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                          </body>
                          </html>
