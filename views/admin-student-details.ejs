              <!DOCTYPE html>
              <html lang="en">
              <head>
                  <meta charset="UTF-8">
                  <meta name="viewport" content="width=device-width, initial-scale=1.0">
                  <title>Admin - Student Details</title>
                  <style>
                      body {
                          font-family: Arial, sans-serif;
                          background-color: #f4f4f4;
                          margin: 0;
                          padding: 20px;
                          color: #333;
                      }
                      h1 {
                          color: #0056b3;
                      }
                      table {
                          width: 100%;
                          border-collapse: collapse;
                          margin-top: 20px;
                      }
                      th, td {
                          text-align: left;
                          padding: 8px;
                          border-bottom: 1px solid #ddd;
                      }
                      th {
                          background-color: #0056b3;
                          color: white;
                      }
                      tr:hover {
                          background-color: #f5f5f5;
                      }
                      .actions {
                          text-align: center;
                      }
                      .button {
                          padding: 5px 10px;
                          text-decoration: none;
                          color: white;
                          background-color: #4CAF50;
                          border: none;
                          border-radius: 5px;
                      }
                      .button:hover {
                          background-color: #45a049;
                      }
                      .button.delete {
                          background-color: #f44336;
                      }
                      .button.delete:hover {
                          background-color: #e31b0c;
                      }
                  </style>
              </head>
              <body>
                  <h1>Student Details</h1>
                  <table>
                      <thead>
                          <tr>
                              <th>ID</th>
                              <th>Full Name</th>
                              <th>Email</th>
                              <th>Gender</th>
                              <th>Phone</th>
                              <th>Faculty</th>
                              <th>Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% students.forEach(function(student) { %>
                              <tr>
                                  <td><%= student.std_id %></td>
                                  <td><%= student.std_fullName %></td>
                                  <td><%= student.std_email %></td>
                                  <td><%= student.std_gender %></td>
                                  <td><%= student.std_phone %></td>
                                  <td><%= student.std_faculty %></td>
                                  <td class="actions">
                                      <a href="/edit/<%= student.std_id %>" class="button">Edit</a>
                                      <a href="/delete/<%= student.std_id %>" class="button delete">Delete</a>
                                  </td>
                              </tr>
                          <% }); %>
                      </tbody>
                  </table>
                            <!-- Existing HTML up to the <main> tag -->

                            <main>
                                <!-- Button to trigger modal or new page for registering student -->
                                <button onclick="document.getElementById('registerModal').style.display='block'">Register New Student</button>

                                <!-- The rest of your existing page content -->

                                <!-- Registration form (modal style) -->
                                <div id="registerModal" style="display:none;">
                                    <form action="/admin/students/register" method="post">
                                        <label for="std_id">Student ID:</label>
                                        <input type="text" id="std_id" name="std_id" required>

                                        <label for="std_fullName">Full Name:</label>
                                        <input type="text" id="std_fullName" name="std_fullName" required>

                                        <label for="std_gender">Gender:</label>
                                        <select id="std_gender" name="std_gender" required>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <!-- Add more options as needed -->
                                        </select>

                                        <label for="std_password">Initial Password:</label>
                                        <input type="password" id="std_password" name="std_password" required>

                                        <input type="submit" value="Register">
                                        <button type="button" onclick="document.getElementById('registerModal').style.display='none'">Cancel</button>
                                    </form>
                                </div>
                            </main>

                            <!-- Rest of your HTML -->

              </body>
              </html>
