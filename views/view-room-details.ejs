<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Details</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body class="bg-light">
    <div class="container mt-2">
        <div class="card common-shadow">
            <div class="card-body common-shadow">
                <h1 class="card-title text-center mb-4">Room Details</h1>
                <table class="table">
                  <tbody>
                    <tr>
                      <th scope="row">Room Number:</th>
                      <td><%= room.room_no %></td>
                    </tr>
                    <tr>
                      <th scope="row">Capacity:</th>
                      <td><%= room.room_capacity %></td>
                    </tr>
                    <tr>
                      <th scope="row">Occupancy:</th>
                      <td><%= room.room_occupancy %></td>
                    </tr>
                    <tr>
                      <th scope="row">Available Beds:</th>
                      <td><%= room.room_capacity - room.room_occupancy %></td>
                    </tr>
                  </tbody>
                </table>

<br><br>
                <h2 class="text-center mb-4">Other Students in Room</h2>
                <div class="table-responsive mb-4">
                     <table class="shadow-table">
                        <thead >
                            <tr>
                                <th>#</th>
                                <th>Faculty</th>
                                <th>Year</th>
                                <th>State</th>
                                <th>Preference</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Matching %</th>
                            </tr>
                        </thead>
                     </table>
                    <div class="tbl-content">
                        <table>
                        <tbody>
                            <% if (students.length > 0) { %>
                                <% students.forEach(function(student, index) { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td class="<%= student.std_faculty === selectedStudent.std_faculty ? 'bg-success text-white' : '' %>"><%= student.std_faculty %></td>
                                        <td class="<%= student.std_year === selectedStudent.std_year ? 'bg-success text-white' : '' %>"><%= student.std_year %></td>
                                        <td class="<%= student.std_state === selectedStudent.std_state ? 'bg-success text-white' : '' %>"><%= student.std_state %></td>
                                        <td class="<%= student.std_pref === selectedStudent.std_pref ? 'bg-success text-white' : '' %>"><%= student.std_pref %></td>
                                        <td><%= student.std_email %></td>
                                        <td><%= student.std_phone %></td>
                                        <td class="text-success"><%= student.matchingPercentage %>%</td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center">No other students in this room.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
<br><br>

                <h2 class="text-center mb-4">Your Information</h2>
                <div class="table-responsive mb-4">
                    <table class="shadow-table">
                        <thead class="thead-light">
                            <tr>
                                <th>Faculty</th>
                                <th>Year</th>
                                <th>State</th>
                                <th>Preference</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="tbl-content">
                        <table>
                        <tbody>
                            <tr>
                                <td><%= selectedStudent.std_faculty %></td>
                                <td><%= selectedStudent.std_year %></td>
                                <td><%= selectedStudent.std_state %></td>
                                <td><%= selectedStudent.std_pref %></td>
                                <td><%= selectedStudent.std_email %></td>
                                <td><%= selectedStudent.std_phone %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
<br>
                <div class="text-center">
                    <a href="/select-room?std_id=<%= selectedStudent.std_id %>" class="btn btn-secondary">Return</a>
                    <form action="/select-room/<%= room.room_id %>" method="post" class="d-inline">
                        <input type="hidden" name="std_id" value="<%= selectedStudent.std_id %>">
                        <button type="submit" class="btn btn-success" >Select Room</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
                            
    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Room Selection</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    You have successfully selected the room!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="redirectToDashboard()">Return to Dashboard</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function redirectToDashboard() {
            window.location.href = '/dashboard?std_id=<%= selectedStudent.std_id %>';
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <% if (showSuccessModal) { %>
        <script>
            $(document).ready(function() {
                $('#successModal').modal('show');
            });
        </script>
    <% } %>
</body>
</html>
