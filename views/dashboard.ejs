<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="text-center mb-4">
            <h1>Welcome, <%= student.std_fullname %></h1>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Student Information</h5>
                <p><strong>Gender:</strong> <%= student.std_gender %></p>
                <p><strong>Email:</strong> <%= student.std_email %></p>
                <p><strong>Phone:</strong> <%= student.std_phone %></p>
                <p><strong>Faculty:</strong> <%= student.std_faculty %></p>
                <p><strong>Year:</strong> <%= student.std_year %></p>
                <p><strong>State:</strong> <%= student.std_state %></p>
                <p><strong>Preference:</strong> <%= student.std_pref %></p>
                <p><strong>Room Number:</strong> <%= roomDetails ? roomDetails.room_no : 'Not assigned' %></p>
                <button class="btn btn-primary" data-toggle="modal" data-target="#editProfileModal">Edit</button>
            </div>
        </div>

        <% if (!student.room_id) { %>
            <div class="text-center mb-4">
                <a href="/select-room?std_id=<%= student.std_id %>" class="btn btn-success" id="addRoomButton">Add Room</a>
            </div>
        <% } else { %>
            <% if (roomDetails) { %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Room Details</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Room Number</th>
                                    <th>Capacity</th>
                                    <th>Occupancy</th>
                                    <th>Available Beds</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= roomDetails.room_no %></td>
                                    <td><%= roomDetails.room_capacity %></td>
                                    <td><%= roomDetails.room_occupancy %></td>
                                    <td><%= roomDetails.room_capacity - roomDetails.room_occupancy %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } else { %>
                <p>You have not selected a room yet.</p>
            <% } %>

            <h5 class="card-title mt-4">Roommates</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Faculty</th>
                        <th>Year</th>
                        <th>State</th>
                        <th>Preference</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <% roommates.forEach(function(roommate) { %>
                        <tr>
                            <td><%= roommate.std_faculty %></td>
                            <td><%= roommate.std_year %></td>
                            <td><%= roommate.std_state %></td>
                            <td><%= roommate.std_pref %></td>
                            <td><%= roommate.std_email %></td>
                            <td><%= roommate.std_phone %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>

        <div class="text-right">
            <button onclick="logout()" class="btn btn-danger">Logout</button>
        </div>
    </div>

    <!-- Loading Modal -->
    <div class="modal fade" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loadingModalLabel">Loading...</h5>
          </div>
          <div class="modal-body text-center">
            <div class="spinner-border text-primary" role="status">
              <span class="sr-only">Loading...</span>
            </div>
            <p>Please wait while we load the room selection page.</p>
          </div>
        </div>
      </div>
    </div>

    <script>
        function logout() {
            // If using localStorage to store logged-in state
            localStorage.removeItem('loggedIn'); // Adjust this to your actual key
            window.location.href = '/'; // Redirect to the login page
        }

        document.getElementById('addRoomButton').addEventListener('click', function() {
            $('#loadingModal').modal('show');
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
